<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_custom_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="2dp"
    android:background="#FFFFFF"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/nav"
            android:layout_width="382dp"
            android:layout_height="39dp"
            android:layout_alignParentTop="true"
            android:orientation="horizontal"
            tools:background="#0077CC"
            tools:padding="2dp">

            <ImageView
                android:id="@+id/back_button"
                android:layout_width="42dp"
                android:layout_height="36dp"
                android:layout_alignParentTop="true"
                android:layout_weight="1"
                android:src="@drawable/back_button" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="335dp"
                android:layout_height="34dp"
                android:layout_alignBottom="@+id/back_button"
                android:layout_weight="1"
                android:text="Remainder"
                android:textSize="24sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="382dp"
            android:layout_height="39dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/set_remainder"
                android:layout_width="14dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Set Remainder" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="382dp"
            android:layout_height="39dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Month" />

            <EditText
                android:id="@+id/month_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="number" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="382dp"
            android:layout_height="39dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Day" />

            <EditText
                android:id="@+id/day_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="number" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="382dp"
            android:layout_height="39dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Hour" />

            <EditText
                android:id="@+id/hour_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="number" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="382dp"
            android:layout_height="39dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="minute" />

            <EditText
                android:id="@+id/minute_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="number" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView16"
            android:layout_width="382dp"
            android:layout_height="39dp"
            android:text="Message" />

        <EditText
            android:id="@+id/message_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textMultiLine" />

    </LinearLayout>

</RelativeLayout>